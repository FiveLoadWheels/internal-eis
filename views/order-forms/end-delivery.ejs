<form class="form-horizontal handleOrder" data-action="ORDER_CONFIRM" data-orderid="<%= id %>">
  <div class="form-group">
    <label class="col-sm-2 control-label">Handler</label>
    <div class="col-sm-10">
        <span class="glyphicon glyphicon-user"></span>
        Nick.Ng (Logistic Department)
    </div>
  </div>

  <div class="form-group">
    <label for="rating" class="col-sm-2 control-label">Customer Rating</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" action-payload name="rating" placeholder="Customer Rating">
    </div>
  </div>

  <div class="form-group">
    <label for="arriveTime" class="col-sm-2 control-label">Customer Recicve Time</label>
    <div class="col-sm-10">
      <input type="date" class="form-control" action-payload name="arriveTime" placeholder="Customer Recicve Time">
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Account Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password" placeholder="Input password to confirm your identity">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>