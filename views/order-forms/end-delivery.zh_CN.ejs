<form class="form-horizontal handleOrder" data-action="END_DELIVERY" data-orderid="<%= id %>">

  <div class="form-group">
    <label class="col-sm-2 control-label">经手人</label>
    <div class="col-sm-10">
        <div class="form-control" disabled><span class="glyphicon glyphicon-user"></span>
        Nick Ng (物流部)</div>
    </div>
  </div>

  <div class="form-group">
    <label for="rating" class="col-sm-2 control-label">用户评分</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" action-payload name="rating" placeholder="Customer Rating">
    </div>
  </div>

  <div class="form-group">
    <label for="arriveTime" class="col-sm-2 control-label">到达时间</label>
    <div class="col-sm-10">
      <input type="date" class="form-control" action-payload name="arriveTime" placeholder="到达时间">
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">账户密码</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password" placeholder="输入密码以确认您的身份">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">提交</button>
    </div>
  </div>
</form>