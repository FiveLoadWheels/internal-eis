<form class="form-horizontal handleAction" data-action="START_DELIVERY" data-id="<%= id %>">
  <% let user = req.session.user; %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Handler</label>
    <div class="col-sm-10">
        <div class="form-control" disabled>
            <span class="glyphicon glyphicon-user"></span>
            <%= `${user.firstName} ${user.lastName} (${PersonnelRole[user.role]} Department)` %>
        </div>
    </div>
  </div>

  <div class="form-group">
    <label for="address" class="col-sm-2 control-label">Delivery Address</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" action-payload name="address" data-type="String" placeholder="Leave blank if not modified.">
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Account Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="passwordConfirm" placeholder="Input password to confirm your identity">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>