<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <title><%= typeof title === 'string' ? title + ' - EISMan' : 'EISMan' %></title>
    </head>

    <body>

        <div id="app">
            <ul class="nav nav-tabs nav-main col-xs-12">
                <a class="n_nav-item" href="/" style="font-weight: bolder">
                    EISMan
                </a>
                <li class="dropdown">
					<a href="#" data-toggle="dropdown" class="nav-dropdown dropdown-toggle">Procedures<strong class="caret"></strong></a>
					<ul class="dropdown-menu">
						<li>
							<a href="/order/view/1">Orders</a>
						</li>
						<li>
							<a href="/product/view/1">Products</a>
						</li>
						<li>
							<a href="/finance/">Finance</a>
						</li>
						<li>
							<a href="/personnel/view/400132">Personnel</a>
						</li>
					</ul>
				</li>
                <a class="n_nav-item">
                    Global Status
                </a>
                <a class="n_nav-item">
                    Help
                </a>
                
                <% if (!req.session.user) { %>
                    <a  class="n_nav-item pull-right" href="/user/login">Login</a>
                <% } else { %>
                    <a  class="n_nav-item pull-right" href="/user/logout">Logout</a>
                <% } %>

                <% if (req.session.user) { 
                    let user = req.session.user; %>
                    <a class="n_nav-item pull-right">
                        <span class="glyphicon glyphicon-user"></span>
                        <%= `${user.firstName} ${user.lastName} (${PersonnelRole[user.role]} Department)` %>
                    </a>
                <% } %> 


            </ul>

            <%- body %>
        </div>

        <script src="/jquery/dist/jquery.min.js"></script>
        <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/client.js"></script>

    </body>
</html>