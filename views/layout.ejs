<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
        <title><%= typeof title === 'string' ? title + ' - EISMan' : 'EISMan' %></title>
    </head>

    <body>

        <div id="app">
            <div class="nav-main">
                <div class="n_nav-item" style="color: #999; font-weight: bolder">
                    EISMan
                </div>
                <div class="n_nav-item">
                    Global Status
                </div>
                <div class="n_nav-item">
                    Help
                </div>
                
                <div class="n_nav-item pull-right">
                    <% if (req.session.user) { 
                        let user = req.session.user; %>
                        <span class="glyphicon glyphicon-user"></span>
                        <%= `${user.firstName} ${user.lastName} (${PersonnelRole[user.role]} Department)` %>
                    <% } else { %>
                        <a href="/personnel/login">Login</a>
                    <% } %>
                </div>
            </div>

            <%- body %>
        </div>

        <script src="/jquery/dist/jquery.min.js"></script>
        <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/client.js"></script>

    </body>
</html>