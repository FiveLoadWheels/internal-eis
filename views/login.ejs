<div class="LoginPage clearfix" full-height style="padding-top: 80px">
    <h2 style="text-align: center">User Login</h2>

    <div class="container well" style="padding-left: 30%; padding-right: 30%">
    <form class="form-horizontal" method="POST" action="/user/login">
        <div class="form-group">
            <label for="id" class="col-sm-0 control-label">ID</label>
            <div class="col-sm-0">
            <input type="text" class="form-control" name="id" placeholder="ID">
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-0 control-label">Password</label>
            <div class="col-sm-0">
            <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-0 col-sm-0">
            <button type="submit" class="btn btn-default">Login</button>
            <span class="text-danger"><%= typeof err !== 'undefined' ? err : '' %></span>
            </div>
        </div>
    </form>
    </div>
</div>