<form class="form-horizontal handleAction" data-action="UPDATE_ACCESSORY" data-id="<%= id %>">
  <% let user = req.session.user; %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Handler</label>
    <div class="col-sm-10">
        <div class="form-control" disabled>
            <span class="glyphicon glyphicon-user"></span>
            <%= `${user.firstName} ${user.lastName} (${PersonnelRole[user.role]} Department)` %>
        </div>
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Account Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="passwordConfirm" placeholder="Input password to confirm your identity">
    </div>
  </div>

  <div class="text-success col-sm-offset-2 col-sm-10" style="font-size: 1.1em">
    <b>After you update the status, the system will assume quantity of
    each required accessory reduce 1.</b>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>