<form class="form-horizontal handleAction" data-action="COMPLETE_ASSEMBLY" data-id="<%= id %>">
  <%
    let user = req.session.user;
    let username = `${user.firstName} ${user.lastName}`;
  %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Handler</label>
    <div class="col-sm-10">
        <div class="form-control" disabled>
            <span class="glyphicon glyphicon-user"></span>
            <%= `${username} (${PersonnelRole[user.role]} Department)` %>
        </div>
    </div>
  </div>


  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Account Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="passwordConfirm" placeholder="Input password to confirm your identity">
    </div>
  </div>

  <div class="text-warning col-sm-offset-2 col-sm-10" style="font-size: 1.1em">
    <div class="">
        Submit this means that you (<%= username %>) have confirmed that the assembly has been completed.
        <b> Plaese ensure that!</b>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>