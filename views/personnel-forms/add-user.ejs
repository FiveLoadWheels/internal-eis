<form class="form-horizontal handleAction" data-action="ADD_USER" data-id="<%= id %>">
	<div class="text-danger" style="padding: 10px 0px; font-size: 1.1em">
		Be aware: You are now manually add a new user.
		<b>Please ensure that you have to do so</b>. Your operation will be recorded.
	</div>
	<% let user = req.session.user; %>
    <div class="form-group">
        <label class="col-sm-2 control-label">Handler</label>
        <div class="col-sm-10">
            <div class="form-control" disabled><span class="glyphicon glyphicon-user"></span>
                <%= `${user.firstName} ${user.lastName} (${PersonnelRole[user.role]} Department)` %>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Account Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="passwordConfirm" placeholder="Input password to confirm your identity">
        </div>
    </div>

    <div class="form-group">
        <label for="account" class="col-sm-2 control-label">New Account</label>
        <div class="col-sm-10">
            <input type="text" action-payload data-type="String" class="form-control" name="account">
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">New Password</label>
        <div class="col-sm-10">
            <input type="password" action-payload data-type="String" class="form-control" name="password">
        </div>
    </div>

    <div class="form-group">
        <label for="firstName" class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" action-payload data-type="String" class="form-control" name="firstName">
        </div>
    </div>

    <div class="form-group">
        <label for="lastName" class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" action-payload data-type="String" class="form-control" name="lastName">
        </div>
    </div>

    <div class="form-group">
        <label for="role" class="col-sm-2 control-label">Department</label>
        <div class="col-sm-10">
            <select action-payload data-type="Number" class="form-control" name="role">
                <option value="" disabled selected>Select an option</option>
                <% for (var i = 1; PersonnelRole[i]; i++ ) { %>
                <option value="<%= i %>"><%= PersonnelRole[i] %></option>
                <% } %>
            </select>
            <!--<input type="text" class="form-control" name="role">-->
        </div>
    </div>

    <div class="form-group">
        <label for="salary" class="col-sm-2 control-label">Salary</label>
        <div class="col-sm-10">
            <input type="number" action-payload data-type="Number" class="form-control" name="salary">
        </div>
    </div>

    <div class="form-group">
        <label for="tel" class="col-sm-2 control-label">Telephone</label>
        <div class="col-sm-10">
            <input type="text" action-payload data-type="Number" class="form-control" name="tel">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>